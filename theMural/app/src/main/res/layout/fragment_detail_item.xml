<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_detail_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353535">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView3"
            android:layout_width="417dp"
            android:layout_height="71dp"
            android:layout_marginStart="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/back_detail_product" />

        <TextView
            android:id="@+id/tittleDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="171dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="182dp"
            android:text="Titulo"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.739"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomNavigationView3" />

        <ImageView
            android:id="@+id/imageDetailItem"
            android:layout_width="389dp"
            android:layout_height="223dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittleDetailItem"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/priceDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="136dp"
            android:text="Precio"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/placeDetailItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetailItem" />

        <TextView
            android:id="@+id/statusDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="277dp"
            android:text="Estado"
            android:textColor="#C6587E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceDetailItem" />

        <TextView
            android:id="@+id/placeDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="66dp"
            android:text="Ubicacion"
            android:textColor="#C6587E"
            app:layout_constraintBottom_toTopOf="@+id/buttonContactSeller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetailItem"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonContactSeller"
            android:layout_width="252dp"
            android:layout_height="51dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="76dp"
            android:backgroundTint="#7758D1"
            android:text="Contactar vendedor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusDetailItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>