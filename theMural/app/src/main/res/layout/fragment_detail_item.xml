<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_detail_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView3"
            android:layout_width="408dp"
            android:layout_height="61dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="63dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/back_detail_product" />

        <TextView
            android:id="@+id/tittleDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="171dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="182dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomNavigationView3" />

        <ImageView
            android:id="@+id/imageDetailItem"
            android:layout_width="270dp"
            android:layout_height="171dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="71dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittleDetailItem"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/priceDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="136dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/placeDetailItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetailItem" />

        <TextView
            android:id="@+id/statusDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="277dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceDetailItem" />

        <TextView
            android:id="@+id/placeDetailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="66dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/buttonContactSeller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetailItem" />

        <Button
            android:id="@+id/buttonContactSeller"
            android:layout_width="252dp"
            android:layout_height="51dp"
            android:layout_marginStart="83dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="201dp"
            android:text="Contactar vendedor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>