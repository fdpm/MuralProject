<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_edit_post">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353535"
        android:backgroundTint="#353535">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="410dp"
            android:layout_height="57dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/back_edit_post">

            <CheckBox
                android:id="@+id/checkBoxNew2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="11dp"
                android:text="Nuevo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="126dp"
                android:layout_marginTop="620dp"
                android:layout_marginEnd="126dp"
                android:text="Detalles de la publicacion" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <Button
            android:id="@+id/buttonContinueDetail2"
            android:layout_width="313dp"
            android:layout_height="55dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="142dp"
            android:layout_marginBottom="136dp"
            android:backgroundTint="#7758D1"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.436"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5"
            app:layout_constraintVertical_bias="0.687" />

        <TextView
            android:id="@+id/descriptionItem2"
            android:layout_width="314dp"
            android:layout_height="127dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="51dp"
            android:background="#404040"
            android:hint="Descripcion"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleItem2" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="311dp"
            android:layout_height="53dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="112dp"
            android:backgroundTint="#C6587E"
            android:ems="10"
            android:hint="Precio"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxUsed2" />

        <CheckBox
            android:id="@+id/checkBoxUsed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="156dp"
            android:buttonTint="#FFFFFF"
            android:text="Usado"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBoxNone2"
            app:layout_constraintTop_toBottomOf="@+id/locationItem2" />

        <TextView
            android:id="@+id/stateItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="322dp"
            android:text="Estado"
            android:textColor="#C6587E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationItem2" />

        <CheckBox
            android:id="@+id/checkBoxNone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:buttonTint="#FFFFFF"
            android:text="No aplica"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stateItem2" />

        <EditText
            android:id="@+id/titleItem2"
            android:layout_width="308dp"
            android:layout_height="46dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="101dp"
            android:backgroundTint="#C6587E"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomNavigationView" />

        <TextView
            android:id="@+id/locationItem2"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="51dp"
            android:background="#404040"
            android:hint="Ubicacion"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionItem2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>