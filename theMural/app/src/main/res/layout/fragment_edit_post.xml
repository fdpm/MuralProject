<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_edit_post">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="410dp"
            android:layout_height="57dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/back_edit_post">

            <CheckBox
                android:id="@+id/checkBoxNew2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="11dp"
                android:text="Nuevo" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="126dp"
                android:layout_marginTop="620dp"
                android:layout_marginEnd="126dp"
                android:text="Detalles de la publicacion" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <Button
            android:id="@+id/buttonContinueDetail2"
            android:layout_width="155dp"
            android:layout_height="48dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="142dp"
            android:layout_marginBottom="96dp"
            android:text="Continuar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descriptionItem2"
            android:layout_width="314dp"
            android:layout_height="127dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="51dp"
            android:text="Descripcion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleItem2" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="112dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Precio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxUsed2" />

        <CheckBox
            android:id="@+id/checkBoxUsed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="186dp"
            android:text="Usado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBoxNone2"
            app:layout_constraintTop_toBottomOf="@+id/locationItem2" />

        <TextView
            android:id="@+id/stateItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="322dp"
            android:text="Estado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationItem2" />

        <CheckBox
            android:id="@+id/checkBoxNone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="16dp"
            android:text="No aplica"
            app:layout_constraintEnd_toStartOf="@+id/checkBoxUsed2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stateItem2" />

        <EditText
            android:id="@+id/titleItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="101dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Titulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottomNavigationView" />

        <TextView
            android:id="@+id/locationItem2"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="51dp"
            android:text="Ubicacion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionItem2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>