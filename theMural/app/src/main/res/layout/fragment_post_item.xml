<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_post_item">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353535">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="176dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="178dp"
            android:text="Filtra la categoria que buscas"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonBooks"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="77dp"
            android:backgroundTint="#7758D1"
            android:text="Libros"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/buttonTools"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#7758D1"
            android:text="Herramientas"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/buttonLivingPlace"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7758D1"
            android:text="Viviendas"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonBooks" />

        <Button
            android:id="@+id/buttonDevices"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#7758D1"
            android:text="Dispositivos"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTools" />

        <Button
            android:id="@+id/buttonMonitoring"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="188dp"
            android:backgroundTint="#7758D1"
            android:text="Monitorias"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonLivingPlace" />

        <Button
            android:id="@+id/buttonVehicles"
            android:layout_width="111dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="188dp"
            android:backgroundTint="#7758D1"
            android:text="Vehiculos"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonDevices" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>